<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:baselineAligned="false"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".VideoPlayerActivity" >

    <fragment
        android:id="@+id/fragment_videoplayer"
        android:name="com.stickmanventures.android.example.immersive_videoplayer.ui.fragments.VideoPlayerFragment"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="1" />

    <fragment
        android:id="@+id/fragment_videodetails"
        android:name="com.stickmanventures.android.example.immersive_videoplayer.ui.fragments.VideoDescriptionFragment"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="1" />
    
</LinearLayout>
