<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainContainer"
    android:layout_width="0dp"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:gravity="center"
        android:layout_weight="0.3"
        android:orientation="vertical" >

        <com.impact.preshopping.adapter.SquareImageView
            android:id="@+id/imageViewProdIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/app_icon_144px" />
        
                <TextView
            android:id="@+id/textViewProdTotalImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="5dp"
            android:text="Total %s images"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/videoDetailsContainer"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:layout_weight="0.7"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textViewProdTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="TextView" />

        <TextView
            android:id="@+id/textViewProdDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="5dp"
            android:text="TextView"
            android:textSize="12sp" />

                <TextView
            android:id="@+id/textViewProdTotalVideo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="5dp"
            android:text="Total %s videos"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>